    classDef optimal fill:#e3f2fd,stroke:#2196F3
    classDef transition fill:#fff3e0,stroke:#FF9800
    classDef control fill:#e8f5e9,stroke:#4CAF50

    class OP1,OP2,OP3 optimal
    class ST1,ST2,ST3 transition
